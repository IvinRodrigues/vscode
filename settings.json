{
  "animations.Install-Method": "Apc Customize UI++",
  "apc.activityBar": {
    "position": "top",
    "size": 32
  },
  "apc.electron": {
    "frame": false,
    "titleBarStyle": "hiddenInset"
  },
  "apc.font.family": "Inter",
  "apc.header": {
    "height": 36
  },
  "apc.imports": [
    "YOUR_PATH_HERE/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.3/dist/updateHandler.js"
  ],
  "apc.listRow": {
    "height": 24
  },
  "apc.statusBar": {
    "fontSize": 10,
    "height": 32,
    "position": "editor-top"
  },
  "apc.stylesheet": {
    ".editor-actions": "display: none",
    ".notification-toast": "backdrop-filter: blur(16px)",
    ".overflowingContentWidgets": "background-color: transparent !important",
    ".overflowingContentWidgets .editor-widget": "backdrop-filter: blur(16px); background-color: #2e333b00 !important",
    ".overflowingContentWidgets .message": "margin-top: 8px !important",
    ".pane-header": "padding: 0 8px",
    ".sidebar.left .actions-container": "justify-content: space-between !important",
    ".sidebar.left .explorer-folders-view .collapsible::before": "transition: transform .2s ease-out",
    ".sidebar.left .explorer-folders-view .composite .title": "height: 30px !important",
    ".sidebar.left .explorer-folders-view .monaco-list-row": "transition: top .2s ease-out",
    ".sidebar.left .explorer-folders-view .monaco-list-rows": "transition: height .2s ease-in-out",
    ".sidebar.left .title h2, .title-label": "display: none !important",
    ".sidebar.left .title-actions": "padding: 0 !important",
    ".statusbar": "flex-direction: row-reverse",
    ".statusbar .left-items": "flex-grow: 0 !important; flex-direction: row-reverse",
    ".statusbar .right-items": "flex-direction: row !important"
  },
  "breadcrumbs.enabled": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.lineHeight": 2.2,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.semanticHighlighting.enabled": false,
  "editor.smoothScrolling": true,
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    ".env": ".env*",
    "package.json": "prettier*, .*, *.md, tsconfig*, vite*, *.json, Dockerfile, LICENSE, node_modules"
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },
  "prettier.requireConfig": true,
  "symbols.hidesExplorerArrows": false,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 14,
  "window.commandCenter": false,
  "window.menuBarVisibility": "compact",
  "window.titleBarStyle": "native",
  "window.zoomLevel": 1,
  "workbench.activityBar.location": "hidden",
  "workbench.colorCustomizations": {
    "editorWidget.background": "#2e333b00",
    "menu.background": "#2e333b00",
    "menu.selectionBackground": "#2e333b00",
    "notifications.background": "#2e333b00",
    "quickInput.background": "#2e333b00"
  },
  "workbench.colorTheme": "Dracula",
  "workbench.editor.labelFormat": "short",
  "workbench.iconTheme": "symbols",
  "workbench.layoutControl.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.reduceMotion": "off"
}
